<div class="row">
	<div class="span offset4">
	
		<div class="selector">
			<ul class="sign-up">
		        <li><a class="active">For Organizers</a></li>
		        <li><a>For Sponsors</a></li>	        
		    </ul>
		</div>	
	</div>
</div>



<div class="row">
	<div class="span offset2" style="max-width:270px;">
		<header>
	    	<h3>Become a <br>member</h3>
	    </header>

		<%= form_for(resource, :as => resource_name, :url => registration_path(resource_name)) do |f| %>
		  <%= devise_error_messages! %>

		  	<div>
			  <%= f.email_field :email, :placeholder => "Your email", :style => "width:260px" %>
			</div>

		  	<% if f.object.password_required? %>
			  <div>
			  <%= f.password_field :password, :placeholder => "Password", :style => "width:260px" %>
			</div>

			<div>
			  <%= f.password_field :password_confirmation, :placeholder => "Confirm password", :style => "width:260px" %></div>
			<% end %>

			<%- if controller_name != 'sessions' %>
			  <p style="float:right">Have an account? <%= link_to "Sign in", new_session_path(resource_name)%> </p>
			<% end -%>

		  	<div><%= f.submit "Sign up" , :class => "btn btn-blue" %></div>
		<% end %>
		<!-- <%= render "devise/shared/links" %> -->
	</div>


	<div class="span offset2">
		<header>
		    <h3>Sign up with <br>Facebook or Twitter</h3>
		  </header>

		 <%- if devise_mapping.omniauthable? %>
		  <%- resource_class.omniauth_providers.each do |provider| %>
		    <%= link_to "Sign in with #{provider.to_s.titleize}", omniauth_authorize_path(resource_name, provider), :class => "btn_oauth facebook", :style => "background-image: url( #{asset_path  'facebook.png'})" %><br />
		  	<% end -%>
		<% end -%>
	  	<!-- Codul de mai sus o sa apara si twitter cand o sa fie bagat la providers-->

		<a style="background-image: url(<%= asset_path 'twitter.png'%>); " class="btn_oauth twitter" href="#"><span>Connect with Twitter</span></a> 

	</div>
</div>
