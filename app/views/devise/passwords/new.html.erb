<div class="row">
	<div class="span offset3">

<h1>Forgot password?</h1><br />
<p>Please enter your email address so we can send you <br /> instructions to reset your password. </p>

<div style="max-width:360px;">
	<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
	  <%= devise_error_messages! %>

	  <div>
	  	<!-- <%= f.label "We'll send you instructions to reset it" %> -->
	  	<%= f.email_field :email, :placeholder =>"Your email", :style => "width:350px;" %></div>

	  	<%- if controller_name != 'sessions' %>
		  <%= link_to "Sign in", new_session_path(resource_name), :style => "float:right" %>
		<% end -%>

	 	<div><%= f.submit "Send instructions", :class => "btn btn-blue" %></div>
	<% end %>

	<!-- <%= render "devise/shared/links" %> -->
</div>

</div>
</div>
