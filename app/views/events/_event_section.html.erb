<article id="sct<%= event_section.id %>" class="post update" style="margin-bottom:100px;padding-bottom:50px;">
	<section>
<!-- 						<img src="../cache/images/3c29e05f2779aaa0a01d0510115f9b34_normal_2x.png" width="280" height="304" alt="Ordering a taxi without making a call" class="fs-img"> -->
		<aside>
			<time style="background:#0099b5;">
					
					 <div class="bubble-details">
								<h2 style="float:left;margin:0 80px;"> <%= event_section.name %> </h2>
					</div>
			</time>
		</aside>
		<div class="article-content" style="overflow:visible">
			
			<ul class="sortable layout">
				<li class="element"> <%= render partial: "custom_block.html" %></li>
	      <% event_section.blocks.each do |block| %>
	      	<%= render partial: "event_block.html", locals: { block: block, edit_mode: edit_mode } %>
	      <% end %>
	      <% if edit_mode %>
	      	<%= render "event_block_add_toolbar.html"%>
	      <% end %>
      		</ul>
		</div>
	</section>
	<a class="btn btn-large btn-green" style="float:right;margin-top:5px"><i class="icon icon-arrow-down"></i> Expand </a>
</article>	
