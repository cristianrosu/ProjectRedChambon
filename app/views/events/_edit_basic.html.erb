<div id="wrapper" style="margin-top:-60px">
	
<section class="event-timeline" style="font-size:60%;background:none;padding-bottom:0;margin-bottom:60px;padding-top:10px">

    <article class="event-section" style="padding-top:5px;margin-bottom:0;padding-bottom:50px;">

     	 <h1 style="font-size:50px;margin-bottom:30px">Basic information</h1>
		 
		 <div  style="left:0;position:absolute;padding-right:58px;background:none;width:290px;background-color:transparent;padding:0">
		 	<div class="clearfix" style="margin-bottom:30px;padding:0 20px;background:white">
		 		<h1>Preview</h1>
		 	</div>
	
		 	 <%= render partial: 'event', locals: { event: event } %>

		 	 <legend><h2 style="margin-top:70px">Socialbox</h2></legend>
				<h2 style="line-height:1"><small>Link other accounts related to this event</small></h2>
				<div style="margin-bottom:5px">
					<img style="float:left;margin-right:20px" src="http://www.nationaltraveller.com/templates/traveler/images/demo-02_fb.png"></img>
					<input type="text" style="font-size:16px;width:215px" placeholder="facebook.com/example">
				</div>
				<div style="margin-bottom:5px">
		            <img style="float:left;margin-right:20px" src="http://www.nationaltraveller.com/templates/traveler/images/demo-02_tw.png"></img>
		            <input type="text" style="font-size:16px;width:215px" placeholder="@example">				 
		        </div>
		        <div>
		            <img style="float:left;margin-right:20px" src="http://www.nationaltraveller.com/templates/traveler/images/demo-01_add.png"></img>				 
		        </div>
		 		
		</div>


		<section style="">
			<aside style="background:none">
				<div class="bubble">
						  <img src="<%= asset_path 'bubble/icon-message.png' %>"/>
				</div>
				<a><h1 style="float:left;line-height:86px;margin:0">  </h1></a>

			</aside>
			<div class="article-content" style="padding:30px; ">
				<div style="float:right;" class="btn btn-large btn-orange">Import from Eventbrite</div> 	
			<h2 style="margin-bottom:20px">Welcome. Let's get started</h2>
					<%= render partial: 'form', locals: { event: event }, formats: [:html] %>
			</div>
		</section>
	</article>	
</section>
</div>




