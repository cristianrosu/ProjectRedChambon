<!DOCTYPE html>
<html>
<head>
  <title>ProjectRedChambon</title> 
   <!--[if lt IE 9]>
    <script src="http://html5shim.googlecode.com/svn/trunk/html5.js" type="text/javascript"></script>
  <![endif]-->
  <%= stylesheet_link_tag  "MyFontsWebfontsKit", :media => "all" %>
  <%= stylesheet_link_tag  "bootstrap-responsive", :media => "all"%>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <%if @current_controller == "events" && @current_action == "map" %>
    <script src='http://api.tiles.mapbox.com/mapbox.js/v0.6.6/mapbox.js'></script>
    <link href='http://api.tiles.mapbox.com/mapbox.js/v0.6.6/mapbox.css' rel='stylesheet' />
    <script src="https://maps.googleapis.com/maps/api/js?sensor=false&amp;libraries=places"></script>
    </script>
    <script type="text/javascript" charset="UTF-8" src="https://maps.gstatic.com/cat_js/intl/en_us/mapfiles/api-3/9/16/%7Bcommon,map,util,controls,places_impl,marker%7D.js"></script>
    <script type="text/javascript" charset="UTF-8" src="https://maps.gstatic.com/cat_js/intl/en_us/mapfiles/api-3/9/16/%7Bonion%7D.js"></script>
    <script type="text/javascript" charset="UTF-8" src="https://maps.gstatic.com/cat_js/intl/en_us/mapfiles/api-3/9/16/%7Bstats,infowindow%7D.js"></script>
  <%end%>
</head>
<body>

  <% unless @current_controller=="events" && @current_action=="show" || @current_controller=="sessions" || @current_controller=="registrations" || @current_controller=="passwords"%>
    <!-- no need for menu_bar in this cases -->
    <%= render "menu_bar" %>
  <%end%>

  <% if @current_controller=="events" && @current_action=="index"%>

    <%= render "events_header" %>
  <%end%>

  <% if @current_controller=="admin" %>
    <%= render "admin/admin_layout" %>
  
  <%else%>
      <% if @current_controller == "events" && @current_action== "map" %>
        <%= yield %>
      <%else%>
          <div class="container-fluid">
            <% flash.each do |name, msg| %>
              <div class="alert alert-<%= name == :notice ? "success" : "error" %>">
                <a class="close" data-dismiss="alert">×</a>
                <%= msg %>
              </div>
            <% end %>
            <%= yield %>
          </div>   
      <% end %>
<% end %>


  <!-- 
      <p class="notice"><%= notice %></p>
      <p class="alert"><%= alert %></p>  -->
     
</body>

<div class="modal  hide" id="mModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">Modal header</h3>
  </div>
  <div class="modal-body">
    <p>One fine body…</p>
  </div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
    <button class="btn btn-primary">Save changes</button>
  </div>
</div>


</html>
